- provide(:title, @user.name)
.row
  %aside.col-md-4
    %section.user_info
      = render 'shared/user_info'
    %section.micropost_form
      = render 'shared/micropost_form'
  .col-md-8
    - if @user.microposts.any?
      %h3
        Microposts (#{@user.microposts.count})
      %ol.microposts
        = render @microposts
      = will_paginate @microposts

