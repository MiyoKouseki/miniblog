- provide(:title, @title)
.row
  %aside.col-md-4
    %section.user_info
      = gravatar_for @user
      %h1= @user.name
      %span= link_to "view my profile", @user
      %span
        %b Microposts:
        = @user.microposts.count
    %section.stats
      = render 'shared/stats'
      - if @users.any?
        .user_avatars
          - @users.each do |user|
            = link_to gravatar_for(user, size: 30), user
  .col-md-8
    %h3= @title
    - if @users.any?      
      %ul.users.follow
        - @users.each do |user|
          %li
            = gravatar_for user, size: 50
            = link_to user.name, user       
      = will_paginate
