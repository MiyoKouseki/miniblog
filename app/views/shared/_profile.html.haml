.profile.clearfix
  = link_to gravatar_for(@user, size: 75), @user
  %div= link_to @user.name, @user
  %div= @user.email
  - if logged_in? && !current_user?(@user)
    #follow_form
      - if current_user.following?(@user)
        = render 'shared/unfollow', user: @user
      - else
        = render 'shared/follow', user: @user
