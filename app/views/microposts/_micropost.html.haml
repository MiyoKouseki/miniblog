%li{id: "micropost-#{micropost.id}"}
  = link_to gravatar_for(micropost.user, size: 50), micropost.user
  %span.user= link_to micropost.user.name, micropost.user
  %span.content= micropost.content
  %span.favo_count
    = link_to "#{micropost.favouser.count} 件のいいね",
    favorited_micropost_path(micropost.id)
  %span.timestamp
    Posted #{@user.created_at.strftime('%Y/%m/%d %H:%M')}.
    
  - if current_user.like?(micropost)
    = icon("fas", "thumbs-up")    
  - else
    = form_with(model: current_user.favorites.build) do |f|
      = f.hidden_field :micropost, :value=>micropost
      = button_tag type: 'submit', class: 'btn btn-default' do
        = icon("far", "thumbs-up")            
